{
    "elements": [
        {
            "type": "RowLayout",
            "items": [
                {
                    "type": "SelectFile",
                    "name": "ImportFile",
                    "caption": "PCT14 XML Export",
                    "extensions": ".xml",
                    "onChange": "PCTI_UICreateConfiguratorValues($id, $ImportFile, $AdditionalFile);"
                },
                {
                    "type": "ValidationTextBox",
                    "name": "BaseID",
                    "caption": "BaseID"
                },
                {
                    "type": "SelectFile",
                    "name": "AdditionalFile",
                    "caption": "Additional Devices CSV",
                    "extensions": ".csv",
                    "onChange": "PCTI_UICreateConfiguratorValues($id, $ImportFile, $AdditionalFile);"
                }
            ]
        }
    ],
    "actions": [
        {
            "type": "RowLayout",
            "items": [
                {
                    "type": "Select",
                    "name": "ImageSet",
                    "caption": "Image Set",
                    "options": []
                },
                {
                    "type": "Button",
                    "caption": "Add Images",
                    "name": "AddImages",
                    "onClick": "PCTI_CreateImages($id, $Configurator, $ImageSet);"
                }
            ]
        },
        {
            "type": "Configurator",
            "name": "Configurator",
            "discoveryInterval": 300,
            "caption": "Devices",
            "delete": true,
            "columns": [
                {
                    "label": "Address",
                    "name": "address",
                    "width": "120px"
                },
                {
                    "label": "Name",
                    "name": "name",
                    "width": "auto"
                },
                {
                    "label": "Device",
                    "name": "type",
                    "width": "250px"
                },
                {
                    "label": "Status",
                    "name": "status",
                    "width": "250px"
                }
            ],
            "sort": {
                "column": "address",
                "direction": "ascending"
            },
            "values": []
        }
    ],
    "status": []
}
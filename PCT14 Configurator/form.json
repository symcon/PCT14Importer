{
    "elements": [
        {
            "type": "RowLayout",
            "items": [
                {
                    "type": "SelectFile",
                    "name": "ImportFile",
                    "caption": "PCT14 XML Export",
                    "extensions": ".xml",
                    "onChange": "PCTI_UIImport($id, $ImportFile);"
                },
                {
                    "type": "ValidationTextBox",
                    "name": "BaseID",
                    "caption": "BaseID"
                }
            ]
        }
    ],
    "actions": [
        {
            "type": "Configurator",
            "name": "Configurator",
            "discoveryInterval": 300,
            "caption": "Devices",
            "delete": true,
            "columns": [
                {
                    "label": "Address",
                    "name": "address",
                    "width": "120px"
                },
                {
                    "label": "Name",
                    "name": "name",
                    "width": "auto"
                },
                {
                    "label": "Device",
                    "name": "type",
                    "width": "250px"
                },
                {
                    "label": "Status",
                    "name": "status",
                    "width": "250px"
                }
            ],
            "sort": {
                "column": "address",
                "direction": "ascending"
            },
            "values": []
        },
        {
            "type": "PopupAlert",
            "name": "DownloadAlert",
            "popup": {
                "items": [
                    {
                        "type": "Label",
                        "name": "DownloadHint",
                        "caption": "%s devices need to be updated!\n\nPlease download the XML file, import into Eltako PCT14 and programm those devices.\nAfterwards export the new XML from Eltako PCT14 and import it into this configurator."
                    },
                    {
                        "type": "Button",
                        "name": "DownloadButton",
                        "caption": "Download",
                        "download": "pct14.xml",
                        "onClick": "echo 'data:text/xml;base64,PHhtbD48L3htbD4=';"
                    }
                ]
            },
            "visible": false
        }
    ],
    "status": []
}